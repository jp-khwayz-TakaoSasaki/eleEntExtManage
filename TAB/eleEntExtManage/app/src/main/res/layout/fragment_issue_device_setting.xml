<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlSymmetry"
    tools:context=".setting.IssueDeviceSettingFragment">

    <TextView
        android:id="@+id/terminal_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/default_margin"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_setting"
        android:text="@string/terminalID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/terminal_id_text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:inputType="textVisiblePassword"
        android:textSize="@dimen/text_size_setting"
        android:hint="@string/terminalID"
        android:autofillHints="@string/terminalID"
        android:theme="@style/EditTextStyle"
        app:layout_constraintTop_toBottomOf="@+id/terminal_id_title"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="@dimen/horizontal_line_height"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/terminal_id_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/affiliation_base_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/default_margin"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_setting"
        android:text="@string/affiliation_base"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1" />

    <EditText
        android:id="@+id/affiliation_base_text"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:inputType="textVisiblePassword"
        android:paddingStart="@dimen/default_padding"
        android:textSize="@dimen/text_size_18sp"
        android:maxLength="4"
        android:hint="@string/affiliation_base"
        android:autofillHints="@string/affiliation_base"
        android:theme="@style/EditTextStyle"
        app:layout_constraintTop_toBottomOf="@+id/affiliation_base_title"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="@dimen/horizontal_line_height"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/affiliation_base_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/api_connection_destination_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/default_margin"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_setting"
        android:text="@string/access_point"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <EditText
        android:id="@+id/api_connection_destination_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:inputType="textVisiblePassword"
        android:textSize="@dimen/text_size_setting"
        android:hint="@string/access_point"
        android:autofillHints="@string/access_point"
        android:theme="@style/EditTextStyle"
        app:layout_constraintTop_toBottomOf="@+id/api_connection_destination_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="@dimen/horizontal_line_height"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/api_connection_destination_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>