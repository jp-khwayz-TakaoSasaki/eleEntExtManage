<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="50dp"
    android:id="@+id/packing_list_row">

    <TextView
        android:id="@+id/packing_list_row_cno"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.11"
        android:background="@drawable/text_black_border"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/packing_list_row_final_packing_appearance"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.14"
        android:background="@drawable/text_black_border"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/packing_list_row_length"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.11"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        android:background="@drawable/text_black_border"
        android:gravity="center_vertical|right"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/packing_list_row_width"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.11"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        android:background="@drawable/text_black_border"
        android:gravity="center_vertical|right"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/packing_list_row_height"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.11"
        android:background="@drawable/text_black_border"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        android:gravity="center_vertical|right"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/packing_list_row_weight"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.12"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        android:background="@drawable/text_black_border"
        android:gravity="center_vertical|right"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/packing_list_row_inner_package"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.16"
        android:paddingLeft="@dimen/default_padding"
        android:paddingRight="@dimen/default_padding"
        android:background="@drawable/text_black_border"
        android:gravity="center_vertical|right"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.13"
        android:gravity="center"
        android:background="@drawable/text_black_border">
        <Button
            android:id="@+id/packing_list_row_button_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="@dimen/button_margin_normal"
            android:background="@drawable/button_round_gray_2"
            android:text="@string/packing_list_button_label_cancel"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/button_text_size_middle"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>