<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="50dp"
    android:id="@+id/packing_scan_row">

    <TextView
        android:id="@+id/packing_scan_row_no"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.03"
        android:gravity="center"
        android:paddingVertical="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:background="@drawable/text_black_border"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_extra_large" />

    <TextView
        android:id="@+id/packing_scan_row_over_pack"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.04"
        android:paddingVertical="2dp"
        android:background="@drawable/text_black_border"
        android:gravity="center_vertical|start"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_extra_large" />

    <TextView
        android:id="@+id/packing_scan_row_purchase_order_no"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:paddingVertical="2dp"
        android:background="@drawable/text_black_border"
        android:gravity="start|center_vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_extra_large" />

    <TextView
        android:id="@+id/packing_scan_row_branch_no"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.04"
        android:background="@drawable/text_black_border"
        android:gravity="start|center_vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_extra_large" />

    <TextView
        android:id="@+id/packing_scan_row_order_no"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:paddingVertical="2dp"
        android:background="@drawable/text_black_border"
        android:gravity="start|center_vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_extra_large" />

    <TextView
        android:id="@+id/packing_scan_row_item_code"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.11"
        android:paddingVertical="2dp"
        android:background="@drawable/text_black_border"
        android:gravity="start|center_vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_extra_large" />

    <TextView
        android:id="@+id/packing_scan_row_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.11"
        android:paddingVertical="2dp"
        android:background="@drawable/text_black_border"
        android:gravity="start|center_vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_extra_large" />

    <TextView
        android:id="@+id/packing_scan_row_stock_quantity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.06"
        android:paddingVertical="2dp"
        android:background="@drawable/text_black_border"
        android:gravity="center_vertical|end"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_extra_large" />

    <TextView
        android:id="@+id/packing_scan_row_shipment_quantity"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.06"
        android:paddingVertical="2dp"
        android:background="@drawable/text_black_border"
        android:gravity="center_vertical|end"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_extra_large" />

    <TextView
        android:id="@+id/packing_scan_row_shipment_quantity_total"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.06"
        android:paddingVertical="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:gravity="center_vertical|end"
        android:background="@drawable/text_black_border"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_extra_large" />

    <TextView
        android:id="@+id/packing_scan_row_shipment_unit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.05"
        android:paddingVertical="2dp"
        android:background="@drawable/text_black_border"
        android:gravity="start|center_vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_extra_large" />

    <TextView
        android:id="@+id/packing_scan_row_receipt_appearance"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.04"
        android:paddingVertical="2dp"
        android:background="@drawable/text_black_border"
        android:gravity="start|center_vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_extra_large" />

    <TextView
        android:id="@+id/packing_scan_row_bundled_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.04"
        android:paddingVertical="2dp"
        android:background="@drawable/text_black_border"
        android:gravity="center_vertical|start"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_extra_large" />

    <TextView
        android:id="@+id/packing_scan_row_receipt_day"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.09"
        android:paddingVertical="2dp"
        android:background="@drawable/text_black_border"
        android:gravity="start|center_vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_extra_large" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.07"
        android:gravity="center"
        android:background="@drawable/text_black_border">
        <Button
            android:id="@+id/packing_scan_row_bt_single_packaging"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="@dimen/button_margin_normal"
            android:background="@drawable/button_round_blue_2"
            android:text="@string/packing_scan_button_label_single_packaging"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</LinearLayout>