<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#C00000">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_destination_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_ship_date_start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />

    <TextView
        android:id="@+id/issue_registration_invoice_search_header_invoice_no"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/invoice_no"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_extra_large"
        android:background="@drawable/text_black_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_destination_start"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/issue_registration_invoice_search_header_destination"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/destination"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_extra_large"
        android:background="@drawable/text_black_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_ship_date_start"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/issue_registration_invoice_search_header_invoice_no"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/issue_registration_invoice_search_header_ship_date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/ship_date"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size_extra_large"
        android:background="@drawable/text_black_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/issue_registration_invoice_search_header_destination"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>