<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view15"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-2dp"
        android:background="#C00000"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/issue_device_setting_button"
        app:layout_constraintEnd_toEndOf="@+id/issue_device_setting_button"
        app:layout_constraintStart_toStartOf="@+id/issue_device_setting_button"
        app:layout_constraintTop_toTopOf="@+id/issue_device_setting_button" />

    <Button
        android:id="@+id/issue_device_setting_button"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="88dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:text="@string/device_setting"
        android:textSize="@dimen/button_text_size_menu"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/issue_device_setting_button"
        app:layout_constraintStart_toStartOf="@id/issue_device_setting_button"
        app:srcCompat="@drawable/title_bg" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/issue_rfid_setting_button"
        app:layout_constraintStart_toStartOf="@id/issue_rfid_setting_button"
        app:srcCompat="@drawable/title_bg" />

    <View
        android:id="@+id/view16"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-2dp"
        android:background="#C00000"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/issue_rfid_setting_button"
        app:layout_constraintEnd_toEndOf="@+id/issue_rfid_setting_button"
        app:layout_constraintStart_toStartOf="@+id/issue_rfid_setting_button"
        app:layout_constraintTop_toTopOf="@+id/issue_rfid_setting_button" />

    <Button
        android:id="@+id/issue_rfid_setting_button"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:text="@string/rfid_setting"
        android:textSize="@dimen/button_text_size_menu"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/issue_device_setting_button" />

</androidx.constraintlayout.widget.ConstraintLayout>