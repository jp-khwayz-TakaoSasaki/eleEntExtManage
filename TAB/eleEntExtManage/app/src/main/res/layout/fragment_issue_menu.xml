        app:layout_constraintStart_toStartOf="@id/issue_menu_button4"
        app:srcCompat="@drawable/title_bg" />

    <!-- 貨物ステータス確認 -->
    <View
        android:id="@+id/viewCargo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-2dp"
        android:background="#C00000"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/issue_menu_button_cargo"
        app:layout_constraintEnd_toEndOf="@id/issue_menu_button_cargo"
        app:layout_constraintStart_toStartOf="@id/issue_menu_button_cargo"
        app:layout_constraintTop_toTopOf="@id/issue_menu_button_cargo" />

    <Button
        android:id="@+id/issue_menu_button_cargo"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:text="@string/cargo_status"
        android:textSize="@dimen/button_text_size_menu"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline66"
        app:layout_constraintEnd_toStartOf="@+id/guideline63"
        app:layout_constraintStart_toStartOf="@+id/guideline63"
        app:layout_constraintTop_toTopOf="@+id/guideline66" />

    <ImageView
        android:id="@+id/imageViewCargo"
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/issue_menu_button_cargo"
        app:layout_constraintStart_toStartOf="@id/issue_menu_button_cargo"
        app:srcCompat="@drawable/title_bg" />

    <!-- 設定 -->
    <View
        android:id="@+id/view38"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-2dp"
        android:background="#C00000"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/issue_menu_button5"
        app:layout_constraintEnd_toEndOf="@id/issue_menu_button5"
        app:layout_constraintStart_toStartOf="@id/issue_menu_button5"
        app:layout_constraintTop_toTopOf="@id/issue_menu_button5" />

    <Button
        android:id="@+id/issue_menu_button5"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:text="@string/setting"
        android:textSize="@dimen/button_text_size_menu"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline67"
        app:layout_constraintEnd_toStartOf="@+id/guideline63"
        app:layout_constraintStart_toStartOf="@+id/guideline63"
        app:layout_constraintTop_toTopOf="@+id/guideline67" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/issue_menu_button5"
        app:layout_constraintStart_toStartOf="@id/issue_menu_button5"
        app:srcCompat="@drawable/title_bg" />

    <!-- 1列目 ガイドライン -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline46"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <!-- 2列目 ガイドライン -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <!-- 1行目 ガイドライン -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <!-- 2行目 ガイドライン -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38" />

    <!-- 3行目 ガイドライン -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62" />

    <!-- 4行目 ガイドライン -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline67"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />


</androidx.constraintlayout.widget.ConstraintLayout>