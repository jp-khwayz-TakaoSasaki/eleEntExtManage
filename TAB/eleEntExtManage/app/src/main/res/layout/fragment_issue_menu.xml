<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1列目のボタン -->
    <!-- ピッキングボタン -->
    <View
        android:id="@+id/view28"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-2dp"
        android:background="#C00000"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/issue_menu_button1"
        app:layout_constraintEnd_toEndOf="@id/issue_menu_button1"
        app:layout_constraintStart_toStartOf="@id/issue_menu_button1"
        app:layout_constraintTop_toTopOf="@id/issue_menu_button1" />

    <Button
        android:id="@+id/issue_menu_button1"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:text="@string/picking"
        android:textSize="@dimen/button_text_size_menu"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline62"
        app:layout_constraintEnd_toStartOf="@+id/guideline46"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/guideline46"
        app:layout_constraintTop_toTopOf="@+id/guideline62" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/issue_menu_button1"
        app:layout_constraintStart_toStartOf="@id/issue_menu_button1"
        app:srcCompat="@drawable/title_bg" />

    <!-- 梱包ボタン -->
    <View
        android:id="@+id/view32"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-2dp"
        android:background="#C00000"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/issue_menu_button2"
        app:layout_constraintEnd_toEndOf="@id/issue_menu_button2"
        app:layout_constraintStart_toStartOf="@id/issue_menu_button2"
        app:layout_constraintTop_toTopOf="@id/issue_menu_button2" />

    <Button
        android:id="@+id/issue_menu_button2"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:text="@string/packing"
        android:textSize="@dimen/button_text_size_menu"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline65"
        app:layout_constraintEnd_toStartOf="@+id/guideline46"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/guideline46"
        app:layout_constraintTop_toTopOf="@+id/guideline65" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/issue_menu_button2"
        app:layout_constraintStart_toStartOf="@id/issue_menu_button2"
        app:srcCompat="@drawable/title_bg" />

    <!-- ケースマーク印刷 -->
    <View
        android:id="@+id/view36"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-2dp"
        android:background="#C00000"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/issue_menu_button3"
        app:layout_constraintEnd_toEndOf="@id/issue_menu_button3"
        app:layout_constraintStart_toStartOf="@id/issue_menu_button3"
        app:layout_constraintTop_toTopOf="@id/issue_menu_button3" />

    <Button
        android:id="@+id/issue_menu_button3"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:text="@string/case_mark_print"
        android:textSize="@dimen/button_text_size_menu"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline66"
        app:layout_constraintEnd_toStartOf="@+id/guideline46"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline46"
        app:layout_constraintTop_toTopOf="@+id/guideline66" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/issue_menu_button3"
        app:layout_constraintStart_toStartOf="@id/issue_menu_button3"
        app:srcCompat="@drawable/title_bg" />

    <!-- ケースマーク貼付け TODO:二次開発時にVisibilityを変更すること -->
    <Button
        android:id="@+id/issue_menu_button_casemark_paste"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:text="@string/case_mark_crucifixion"
        android:textSize="@dimen/button_text_size_menu"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline67"
        app:layout_constraintEnd_toEndOf="@+id/view36"
        app:layout_constraintStart_toStartOf="@+id/view36"
        app:layout_constraintTop_toTopOf="@+id/guideline67" />

    <View
        android:id="@+id/issue_menu_button_casemark_paste_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-2dp"
        android:background="#C00000"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/issue_menu_button_casemark_paste"
        app:layout_constraintEnd_toEndOf="@id/issue_menu_button_casemark_paste"
        app:layout_constraintStart_toStartOf="@id/issue_menu_button_casemark_paste"
        app:layout_constraintTop_toTopOf="@id/issue_menu_button_casemark_paste" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="18dp"
        android:layout_height="20dp"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="@id/issue_menu_button_casemark_paste"
        app:layout_constraintStart_toStartOf="@id/issue_menu_button_casemark_paste"
        app:srcCompat="@drawable/title_bg" />

    <!-- 2列目のボタン -->
    <!-- 出庫登録 -->
    <View
        android:id="@+id/view37"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-2dp"
        android:background="#C00000"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/issue_menu_button4"
        app:layout_constraintEnd_toEndOf="@id/issue_menu_button4"
        app:layout_constraintStart_toStartOf="@id/issue_menu_button4"
        app:layout_constraintTop_toTopOf="@id/issue_menu_button4" />

    <Button
        android:id="@+id/issue_menu_button4"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:text="@string/issue_registration"
        android:textSize="@dimen/button_text_size_menu"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline62"
        app:layout_constraintEnd_toStartOf="@+id/guideline63"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/guideline63"
        app:layout_constraintTop_toTopOf="@+id/guideline62" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="18dp"
        android:layout_height="20dp"
