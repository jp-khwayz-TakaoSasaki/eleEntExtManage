<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- EditTextのスタイル -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#000000</item>
        <item name="colorAccent">@color/colorInputAccent</item>
        <item name="android:textColor">#000000</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:longClickable">false</item>
    </style>

    <!-- Spinnerのスタイル -->
    <style name="SpinnerStyle">
        <item name="colorControlNormal">#000000</item>
        <item name="colorAccent">@color/colorInputAccent</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- TextInputLayoutのhintのスタイル -->
    <style name="TextAppearanceHint">
        <!-- 上の方のhintの表示サイズ -->
        <item name="android:textSize">14sp</item>
        <!-- 上の方のhintの文字色 -->
        <item name="android:textColor">@color/colorInputAccent</item>
    </style>

    <!-- TextInputLayoutのスタイル -->
    <style name="TextInputLayoutTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:textColorHint">#000000</item>
        <!-- 通常時EditTextの下線 -->
        <item name="colorControlNormal">#000000</item>
        <!-- フォーカス時の下線の色 -->
        <item name="colorAccent">@color/colorInputAccent</item>
        <!-- 通常の文字色 -->
        <item name="android:textColor">#000000</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
    </style>

    <style name="CustomSwitchStyle" parent="Theme.AppCompat.Light">
        <!--ボタンON時のボタンの通り道（透明度30%）・ボタンとタッチフィードバックカラー-->
        <item name="colorControlActivated">@color/colorInputAccent</item>
        <!--        &lt;!&ndash;ボタンOFF時のボタンの通り道（透明度30%）&ndash;&gt;-->
        <!--        <item name="android:colorForeground">#0000ff</item>-->
        <!--        &lt;!&ndash; OFFボタンを押したときのタッチフィードバックカラー &ndash;&gt;-->
        <!--        <item name="colorControlHighlight">#ffff00</item>-->
    </style>
</resources>